          <% if(!task.isRead) { %>
            <script>
              $(document).ready(function () {
                function getCurrentDateTime() {
                  let currentDate = new Date();
                  let hours = currentDate.getHours();
                  let minutes = currentDate.getMinutes();
                  let day = currentDate.getDate();
                  let month = currentDate.getMonth() + 1;
                  let year = currentDate.getFullYear();

                  // Add leading zero to single digit numbers
                  hours = hours.toString().padStart(2, '0');
                  minutes = minutes.toString().padStart(2, '0');
                  day = day.toString().padStart(2, '0');
                  month = month.toString().padStart(2, '0');

                  let dateTime = hours + ":" + minutes + " " + day + "/" + month + "/" + year;
                  return dateTime;
                }
                $('#read-btn').on('click', function () {
                  const target = document.querySelector(this.dataset.bsTarget);

                  const time = getCurrentDateTime();
                  target.querySelector('.modal-body').innerText = `Nhận nhiệm vụ vào ${time}. Tiếp tục?`;
                  const confirmBtn = target.querySelector('.confirm-btn');
                  confirmBtn.addEventListener('click', async function () {
                    let url = `<%= process.env.DOMAIN_NAME %>/tasks/<%= task.id%>/confirmread`;
                    const response = await fetch(url, {
                      method: 'POST',
                      headers: {
                        'Content-Type': 'application/json'
                      },
                      body: JSON.stringify({ time: time })
                    })

                    if (response.status == 200) {
                      location.reload();
                    }
                  })
                })

              })
            </script>
            <% } else { %>
              <script>
                $(document).ready(function () {
                  $('.status-item').on('click', async function () {
                    const statusDisplay = document.getElementById('status-display');
                    if (this.title != statusDisplay.title) {
